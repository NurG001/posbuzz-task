  provider = "postgresql"
  url      = "postgresql://neondb_owner:npg_I25dbWNjshQl@ep-royal-mud-ahxxvri6-pooler.c-3.us-east-1.aws.neon.tech/neondb?sslmode=require&channel_binding=require"
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
}

model Product {
  id             Int      @id @default(autoincrement())
  name           String
  sku            String   @unique
  price          Decimal
  stock_quantity Int
  sales          Sale[]
}

model Sale {
  id          Int      @id @default(autoincrement())
  productId   Int
  quantity    Int
  totalPrice  Decimal
  createdAt   DateTime @default(now())
  product     Product  @relation(fields: [productId], references: [id])
}